<Grid  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       x:Class="MyNsTest" Background="Gray" ShowGridLines="False" Height="400" Width="960">
  <Grid.Resources>
    <DataModel3 x:Name="dataModel" />
		<ResourceDictionary>
		<Style x:Key="ImageCellStyle" TargetType="{x:Type Button}">
				<Setter Property="Width" Value="150"/>
				<Setter Property="Height" Value="150"/>
				<Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background">
            <Setter.Value>
                <ImageBrush ImageSource="image/1.jpg" Stretch="Fill"/>
            </Setter.Value>
        </Setter>
		</Style>
		</ResourceDictionary>
	</Grid.Resources>
  <ScrollViewer Background="#55aabb11" BorderThickness="1"  Width="Auto"  BorderBrush="Black" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
      	<StackPanel x:Name="PicPanel" Orientation="Horizontal" HorizontalAlignment="Center"/>
  </ScrollViewer>
  <Canvas Name="movableButtonCanvas">
     <Button x:Name="movableButton" Canvas.Left="10" Canvas.top="10" Width ="300" Height="300" Opacity="0" >
        <Button.Background>
            <ImageBrush ImageSource="image/1.jpg" Stretch="Fill"/>
       </Button.Background>
     </Button>
  </Canvas>
  
</Grid>